<div class="search-form">
  <%= form_with(url: search_path, local: true) do |form| %>
    <%= form.text_field :content %>
    <%= form.select :model, options_for_select({ "User" => "user", "Book" => "book" }) %>
    <%= form.select :method, options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
    <%= form.submit '検索' %>
  <% end %>
</div>
